
@model List<GalicianWeatherForecast.Models.Municipio>
@{
    ViewBag.Title = "Municipios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Municipios</h2>

<div class="row mt-3">
    <div class="col-sm-10">
        <!-- Search field -->
        <div class="mb-3">
            <form method="get" action="@Url.Action("Municipios", "Prediction")" class="d-flex">
                <input type="text" name="searchTerm" placeholder="Buscar por Concello" class="form-control me-2" style="font-size: 1.2rem; height: 50px;" />
                <button type="submit" class="btn btn-primary" style="height: 50px; font-size: 1.2rem;">Buscar</button>
            </form>
        </div>
    </div>
    <div class="col-sm-2">
        <!-- Buttons to order -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="height: 50px; font-size: 1.2rem;">
                Orden
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="@Url.Action("Municipios", "Prediction", new { sortOrder = "asc" })">Ascendente</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Municipios", "Prediction", new { sortOrder = "desc" })">Descendente</a></li>
            </ul>
        </div>
    </div>
</div>

<p>Número de municipios: @Model.Count</p>

<table class="table table-striped">
    <tr>
        <th>Nombre</th>
    </tr>
    @foreach (var municipio in Model)
    {
        <tr>
            <td>@Html.ActionLink(municipio.name, "Prediction", "Prediction", new { municipioId = municipio.id }, null)</td>
        </tr>
    }
</table>
