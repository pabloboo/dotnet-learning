@{
    ViewBag.Title = "Welcome to DineFind";
}

<main>
    <section class="text-center mt-5">
        <h1>Welcome to DineFind</h1>
        <p class="lead">
            Discover, review, and connect with the best restaurants in town. Browse user reviews, explore personalized recommendations, and make dining out more enjoyable.
        </p>
        <p>
            <a href="@Url.Action("Index", "Restaurant")" class="btn btn-primary btn-lg">Explore Restaurants &raquo;</a>
        </p>
    </section>

    <div class="row mt-5">
        <section class="col-md-4 text-center">
            <h2>User Profiles</h2>
            <p>
                Manage your preferences and explore personalized dining recommendations tailored just for you.
            </p>
            <p>
                <a href="@Url.Action("Index", "User")" class="btn btn-outline-primary">View Users &raquo;</a>
            </p>
        </section>
        <section class="col-md-4 text-center">
            <h2>Restaurant Reviews</h2>
            <p>
                Read honest reviews and ratings from other diners, or contribute your own reviews to guide others.
            </p>
            <p>
                <a href="@Url.Action("Index", "Review")" class="btn btn-outline-primary">Read Reviews &raquo;</a>
            </p>
        </section>
        <section class="col-md-4 text-center">
            <h2>Recommendations</h2>
            <p>
                Get top recommendations based on your preferences and the latest trends.
            </p>
            <p>
                <a href="@Url.Action("Recommendations", "Restaurant")" class="btn btn-outline-primary">Get Recommendations &raquo;</a>
            </p>
        </section>
    </div>
</main>